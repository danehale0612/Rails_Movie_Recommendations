
<h1>Recommendations for "<%= @search_title %>"</h1>
<ul>
  <% @results.each do |result| %>
  <li>
    <% movie_title = result['Name'] %>
    <%= link_to image_tag("#{@poster[result['Index']-1]['Poster']}", :size => '200x297' ), recommendation_path(movie_title) %>
    <div class="movieRecommendations">
      <%= result['Index'] %>) <%= result['Name'] %>
    </div>
    
  </li>
  <% end %>
</ul>

<button class="optionButton"><%= link_to "Enter New Movie", recommendation_search_index_path %></button>

<button class="optionButton"><%= link_to "Go To User Screen", user_screen_index_path %></button>

